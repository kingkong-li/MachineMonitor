<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/machine_photo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@mipmap/demo"/>

    <TextView
        android:id="@+id/tv_machine_name"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="15dp"
        android:layout_marginRight="25dp"
        android:text="Hello"
        android:textColor="@android:color/white"
        android:textSize="16sp">
    </TextView>

    <TextView
        android:id="@+id/tv_current_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="15dp"
        android:layout_marginRight="25dp"
        android:layout_below="@id/tv_machine_name"
        android:text="当前状态good"
        android:textSize="16sp"
        android:textColor="@android:color/white"
         />

    <Button
        android:id="@+id/btn_history_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_current_state"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="25dp"
        android:text="历史信息"
        android:textColor="@android:color/white"
        android:background="@android:color/transparent"
        android:textSize="16sp" />
    <Button
        android:id="@+id/add_sensor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_history_info"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="25dp"
        android:text="添加传感器"
        android:textStyle=""
        android:textColor="@android:color/white"
        android:background="@android:color/transparent"
        android:textSize="16sp" />

    <Button
        android:id="@+id/sensor_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="25dp"
        android:text="传感器列表"
        android:textStyle=""
        android:textColor="@android:color/white"
        android:background="@android:color/transparent"
        android:textSize="16sp" />


</RelativeLayout>
